# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /connected                  controllers.Application.connected
GET     /testActor                  controllers.Application.testActor
GET     /getProviders               controllers.Application.getProviders

# Authentificate to providers
GET     /auth/:provider             controllers.Application.authenticate(provider: String)

# Test bd user
GET     /user/add/:email            controllers.User.add(email: String)
GET     /user/get           		controllers.User.findAll()
GET     /user/get/:email           	controllers.User.findOneByEmail(email: String)

# Exemples
GET     /ex/twitter                 controllers.SocialNetworksTest.twitter
GET     /ex/facebook                controllers.SocialNetworksTest.facebook
GET     /ex/googleplus              controllers.SocialNetworksTest.googleplus
GET     /ex/viadeo                  controllers.SocialNetworksTest.viadeo
GET     /ex/linkedin                controllers.SocialNetworksTest.linkedin
GET     /ex/github                  controllers.SocialNetworksTest.github
GET     /ex/stackexchange           controllers.SocialNetworksTest.stackexchange
GET     /ex/trello                  controllers.SocialNetworksTest.trello
GET     /ex/scoopit                 controllers.SocialNetworksTest.scoopit

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
